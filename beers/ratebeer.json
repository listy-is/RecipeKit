{
  "recipe_shortcut": "ratebeer_beers",
  "list_type": "beers",
  "engine_version": 16,
  "title": "Ratebeer Beers",
  "description": "Retrieve the beers from page ratebeer",
  "urls": [
    "ratebeer.com",
    "https://ratebeer.com",
    "https://www.ratebeer.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://www.ratebeer.com/search?tab=beer&q=$INPUT",
      "description": "Load the url of the beer",
      "config": {
        "js": true,
        "timeout": 1500
      }
    },
    {
      "command": "store_attribute",
      "locator": "[class^=BeerTab]:nth-child($i) img",
      "attribute_name": "src",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 11,
          "step": 2
        }
      }
    },
    {
      "command": "store_text",
      "locator": "[class^=BeerTab]:nth-child($i) div.fg-1 div.fd-r:nth-child(2)",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 11,
          "step": 2
        }
      },
      "description": "Saves the title of the beer"
    },
    {
      "command": "regex",
      "input": "$TITLE$i",
      "expression": ".+?(?=\\,|$)",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 11,
          "step": 2
        }
      },
      "description": "Saves the provider"
    },
    {
      "command": "store_text",
      "locator": "[class^=BeerTab]:nth-child($i) div.fg-1 div.fd-r:nth-child(1)",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 11,
          "step": 2
        }
      },
      "description": "Saves the factory of the beer"
    },
    {
      "command": "store_attribute",
      "locator": "[class^=BeerTab]:nth-child($i) a",
      "attribute_name": "href",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 11,
          "step": 2
        }
      }
    },
    {
      "command": "store",
      "input": "https://www.ratebeer.com$URL$i",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 11,
          "step": 2
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 3000
      },
      "description": "Load the url of the beer"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_text",
      "locator": "div[class*=BeerCard___StyledPaper] div.px-4 > div > div > div > div > a",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the beerhouse of the beer"
    },
    {
      "command": "store_text",
      "locator": "div[class*=BeerCard___StyledPaper] div.px-4 > div > div > div > div > div",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the title of the beer"
    },
    {
      "command": "store_text",
      "locator": "[class*=BeerCard___StyledDiv] > div > div",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Field: Get the rating"
    },
    {
      "command": "store_text",
      "locator": "div[class*=BeerCard___StyledDiv2] > div:nth-child(2) > div:nth-child(3)",
      "output": {
        "name": "ALCOHOL",
        "type": "string",
        "show": true
      },
      "description": "Field: Get the alcohol"
    },
    {
      "command": "store_text",
      "locator": "div[class*=BeerCard___StyledDiv2] > div:nth-child(2) > a",
      "output": {
        "name": "STYLE",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the style"
    },
    {
      "command": "store_text",
      "locator": "div[class*=BeerCard___StyledDiv2] > div",
      "output": {
        "name": "REGION",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the region"
    },
    {
      "command": "store_attribute",
      "locator": "img[class*=BeerCard___StyledImg]",
      "attribute_name": "src",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the image"
    }
  ]
}
