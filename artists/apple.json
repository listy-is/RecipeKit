{
  "recipe_shortcut": "apple_artists",
  "list_type": "artists",
  "engine_version": 16,
  "title": "Apple Artists",
  "description": "Load artists from Apple",
  "urls": [
    "https://itunes.apple.com/search?media=music&entity=musicArtist",
    "itunes.apple.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "https://itunes.apple.com/search?media=music&limit=6&entity=musicArtist&explicit=YES&term=$INPUT",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of apple"
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].artistName",
      "input": "$JSON",
      "output": {
        "name": "TITLE$i"
      },
      "description": "Saves the title.",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].artistId",
      "input": "$JSON",
      "output": {
        "name": "ID$i"
      },
      "description": "Saves the id.",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://itunes.apple.com/search?media=music&country=$LOCALE&entity=musicArtist&limit=1&explicit=YES&term=$ID$i",
      "output": {
        "name": "URL$i"
      },
      "description": "Saves the url.",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "$INPUT",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of apple"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artistName",
      "input": "$JSON",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      },
      "description": "Saves the first artist."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artistLinkUrl",
      "input": "$JSON",
      "output": {
        "name": "URL"
      },
      "description": "Saves the url."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].primaryGenreName",
      "input": "$JSON",
      "output": {
        "name": "GENRE",
        "type": "string",
        "show": true
      },
      "description": "Saves the genre"
    },
    {
      "command": "url_encode",
      "input": "$AUTHOR",
      "output": {
        "name": "AUX_AUTHOR"
      },
      "description": "Url encode of the title"
    },
    {
      "command": "store",
      "input": "https://itunes.apple.com/search?media=music&entity=album&limit=1&explicit=YES&term=$AUX_AUTHOR",
      "output": {
        "name": "AURL"
      }
    },
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "$AURL",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of apple"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artworkUrl100",
      "input": "$JSON",
      "output": {
        "name": "COVER"
      },
      "description": "Saves the cover"
    },
    {
      "command": "regex",
      "input": "$COVER",
      "expression": "[\\S]*\\/",
      "output": {
        "name": "COVER"
      },
      "description": "Applies a regular expression to get part of the cover"
    },
    {
      "command": "store",
      "input": "$COVER300x300bb.jpg",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Add high res param to the cover"
    }
  ]
}
