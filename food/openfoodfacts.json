{
  "recipe_shortcut": "openfoodfacts",
  "list_type": "food",
  "engine_version": 16,
  "title": "Open Food Facts",
  "description": "Load groceries information from Open Food Facts.",
  "urls": [
    "*.openfoodfacts.org"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://$REGION.openfoodfacts.org/cgi/search.pl?action=process&search_terms=$INPUT&sort_by=unique_scans_n&page_size=6?sort_by=popularity",
      "description": "Search food by name and sort by popularity.",
      "config": {
        "js": true,
        "debug": true
      }
    },
    {
      "command": "store_attribute",
      "locator": "#products_match_all > li:nth-child($i) div.list_product_img_div img",
      "attribute_name": "src",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store_text",
      "locator": "#products_match_all > li:nth-child($i) div.list_product_name",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store_attribute",
      "locator": "#products_match_all > li:nth-child($i) div.list_product_sc > img:nth-child(1)",
      "attribute_name": "title",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "regex",
      "input": "$SUBTITLE$i",
      "expression": "(.*?)\\s-\\s",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store_attribute",
      "locator": "#products_match_all > li:nth-child($i) a",
      "attribute_name": "href",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "regex",
      "input": "$URL$i",
      "expression": "(.*\\/)[^\\/]*$",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "regex",
      "input": "$INPUT",
      "expression": "\\/(\\d+)\\/$",
      "output": {
        "name": "BARCODE",
        "show": true
      },
      "description": "Get the last path of the URL to take the barcode."
    },
    {
      "command": "store",
      "input": "https://$REGION.openfoodfacts.org/api/v0/product/$BARCODE.json",
      "output": {
        "name": "APIURL"
      },
      "description": "Concatenates the barcode on the open facts api url."
    },
    {
      "command": "store",
      "input": "https://$REGION.openfoodfacts.org/product/$BARCODE/",
      "output": {
        "name": "URL",
        "show": true
      },
      "description": "Concatenates the barcode on the open facts api url."
    },
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "$APIURL",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output from openfacts"
    },
    {
      "command": "json_store_text",
      "locator": "product.brands",
      "input": "$JSON",
      "output": {
        "name": "BRAND",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.categories",
      "input": "$JSON",
      "output": {
        "name": "CATEGORY",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.image_front_url",
      "input": "$JSON",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.nutriscore_grade",
      "input": "$JSON",
      "output": {
        "name": "NUTRISCORE",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.origins",
      "input": "$JSON",
      "output": {
        "name": "ORIGIN",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.serving_size",
      "input": "$JSON",
      "output": {
        "name": "SIZE",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.stores",
      "input": "$JSON",
      "output": {
        "name": "STORES",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.ingredients_text",
      "input": "$JSON",
      "output": {
        "name": "INGREDIENTS",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "product.generic_name",
      "input": "$JSON",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      }
    }
  ]
}
