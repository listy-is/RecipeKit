{
  "recipe_shortcut": "gr_books",
  "list_type": "books",
  "engine_version": 14,
  "title": "Goodreads",
  "description": "A recipe to get a list of books from Goodreads",
  "urls": [
    "https://www.goodreads.com",
    "www.goodreads.com",
    "http://www.goodreads.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "https://www.goodreads.com/book/auto_complete?format=json&q=$INPUT",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of apple"
    },
    {
      "command": "json_store_text",
      "locator": "[0].imageUrl",
      "input": "$JSON",
      "output": {
        "name": "COVER1"
      },
      "description": "Saves the first cover."
    },
    {
      "command": "json_store_text",
      "locator": "[1].imageUrl",
      "input": "$JSON",
      "output": {
        "name": "COVER2"
      },
      "description": "Saves the first cover."
    },
    {
      "command": "json_store_text",
      "locator": "[2].imageUrl",
      "input": "$JSON",
      "output": {
        "name": "COVER3"
      },
      "description": "Saves the first cover."
    },
    {
      "command": "json_store_text",
      "locator": "[3].imageUrl",
      "input": "$JSON",
      "output": {
        "name": "COVER4"
      },
      "description": "Saves the first cover."
    },
    {
      "command": "json_store_text",
      "locator": "[4].imageUrl",
      "input": "$JSON",
      "output": {
        "name": "COVER5"
      },
      "description": "Saves the first cover."
    },
    {
      "command": "json_store_text",
      "locator": "[0].title",
      "input": "$JSON",
      "output": {
        "name": "TITLE1"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[1].title",
      "input": "$JSON",
      "output": {
        "name": "TITLE2"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[2].title",
      "input": "$JSON",
      "output": {
        "name": "TITLE3"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[3].title",
      "input": "$JSON",
      "output": {
        "name": "TITLE4"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[4].title",
      "input": "$JSON",
      "output": {
        "name": "TITLE5"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[0].author.name",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE1"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[1].author.name",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE2"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[2].author.name",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE3"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[3].author.name",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE4"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[4].author.name",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE5"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[5].author.name",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE6"
      },
      "description": "Saves the title."
    },
    {
      "command": "json_store_text",
      "locator": "[0].description.fullContentUrl",
      "input": "$JSON",
      "output": {
        "name": "URL1"
      },
      "description": "Saves the url."
    },
    {
      "command": "json_store_text",
      "locator": "[1].description.fullContentUrl",
      "input": "$JSON",
      "output": {
        "name": "URL2"
      },
      "description": "Saves the url."
    },
    {
      "command": "json_store_text",
      "locator": "[2].description.fullContentUrl",
      "input": "$JSON",
      "output": {
        "name": "URL3"
      },
      "description": "Saves the url."
    },
    {
      "command": "json_store_text",
      "locator": "[3].description.fullContentUrl",
      "input": "$JSON",
      "output": {
        "name": "URL4"
      },
      "description": "Saves the url."
    },
    {
      "command": "json_store_text",
      "locator": "[4].description.fullContentUrl",
      "input": "$JSON",
      "output": {
        "name": "URL5"
      },
      "description": "Saves the url."
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 1000
      },
      "description": "Load the url of the book"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:title']",
      "attribute_name": "content",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Saves the title"
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection__description .TruncatedContent__text.TruncatedContent__text--large span",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection__genres .Button__labelItem",
      "output": {
        "name": "STYLE",
        "type": "string",
        "show": true
      },
      "description": "Saves the style"
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection .BookDetails [data-testid=publicationInfo]",
      "output": {
        "name": "AYEAR"
      },
      "description": "Saves the published data"
    },
    {
      "command": "regex",
      "input": "$AYEAR",
      "expression": "\\d\\d\\d\\d(?!.*\\d\\d\\d\\d)",
      "output": {
        "name": "YEAR",
        "type": "date",
        "format": "YYYY",
        "show": true
      },
      "description": "Applies a regular expression to get part of the year"
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection__contributor .ContributorLink__name",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      },
      "description": "Saves the author"
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection__ratingStats .RatingStatistics__rating",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Saves the rating"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:image']",
      "attribute_name": "content",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Saves the image"
    }
  ]
}
