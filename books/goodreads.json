{
  "recipe_shortcut": "gr_books",
  "list_type": "books",
  "engine_version": 16,
  "title": "Goodreads",
  "description": "A recipe to get a list of books from Goodreads",
  "urls": [
    "https://www.goodreads.com/book/show/",
    "www.goodreads.com",
    "http://www.goodreads.com/book/show/"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://www.goodreads.com/search?q=$INPUT",
      "config": {
        "js": true
      },
      "description": "Searches books by title"
    },
    {
      "command": "store_attribute",
      "locator": "[itemtype='http://schema.org/Book']:eq($i) .bookTitle[itemprop=url]",
      "attribute_name": "href",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      },
      "output": {
        "name": "URL$i"
      },
      "description": "Saves the absolute book url"
    },
    {
      "command": "store_attribute",
      "locator": "[itemtype='http://schema.org/Book']:eq($i) [itemprop=image]",
      "attribute_name": "src",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      },
      "output": {
        "name": "COVER$i"
      },
      "description": "Saves the book cover"
    },
    {
      "command": "store_text",
      "locator": "[itemtype='http://schema.org/Book']:eq($i) [itemprop='name'][role=heading]",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      },
      "output": {
        "name": "TITLE$i"
      },
      "description": "Saves the title"
    },
    {
      "command": "store_text",
      "locator": "[itemtype='http://schema.org/Book']:eq($i) [itemtype='http://schema.org/Person'] span[itemprop='name']",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      },
      "output": {
        "name": "SUBTITLE$i"
      },
      "description": "Saves the author"
    },
    {
      "command": "store",
      "input": "https://www.goodreads.com$URL$i",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      },
      "output": {
        "name": "URL$i"
      },
      "description": "Adds domain to url"
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 100
      },
      "description": "Loads the book detail"
    },
    {
      "command": "store_attribute",
      "locator": ".BookCover__image img",
      "attribute_name": "src",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Saves the cover."
    },
    {
      "command": "store_text",
      "locator": ".BookPageTitleSection__title h1",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Saves the title."
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection .BookPageMetadataSection__description span",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description."
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection .ContributorLink__name",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      },
      "description": "Saves the author."
    },
    {
      "command": "store_text",
      "locator": ".BookPageMetadataSection .RatingStatistics__rating",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Saves the rating."
    },
    {
      "command": "store_text",
      "locator": ".FeaturedDetails [data-testid='pagesFormat']",
      "output": {
        "name": "PAGES",
        "type": "string"
      },
      "description": "Saves the number pages."
    },
    {
      "command": "regex",
      "input": "$PAGES",
      "expression": "(\\d+)",
      "output": {
        "name": "PAGES",
        "show": true
      },
      "description": "Remove letters from pages."
    },
    {
      "command": "store_text",
      "locator": ".FeaturedDetails [data-testid='publicationInfo']",
      "output": {
        "name": "YEAR",
        "type": "string"
      },
      "description": "Saves the number pages."
    },
    {
      "command": "regex",
      "input": "$YEAR",
      "expression": "(\\d+)$",
      "output": {
        "name": "YEAR",
        "show": true
      },
      "description": "Remove letters from year."
    }
  ]
}
