{
  "recipe_shortcut": "vivino_wines",
  "list_type": "wines",
  "engine_version": 16,
  "title": "Vivino Wines",
  "description": "Retrieve the wines from page vivino",
  "urls": [
    "vivino.com",
    "https://vivino.com",
    "https://www.vivino.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://www.vivino.com/search/wines?q=$INPUT",
      "description": "Load the url of the wine"
    },
    {
      "command": "store_attribute",
      "locator": "div.search-results-list > div:nth-child($i) figure",
      "attribute_name": "style",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "regex",
      "input": "$COVER$i",
      "expression": "(?<=\\/\\/).+?(?=\\)|$)",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://$COVER$i",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store_text",
      "locator": "div.search-results-list > div:nth-child($i) span.wine-card__name",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the title of the wine"
    },
    {
      "command": "store_text",
      "locator": "div.search-results-list > div:nth-child($i) span.wine-card__region",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      },
      "description": "Saves the region of the wine"
    },
    {
      "command": "store_attribute",
      "locator": "body > div.wrap > section.search-page.section-alt > div > div > div > div.search-page__content > div > div:nth-child($i) > div > div.wine-card__content > div.wine-card__header-wrapper > span.header-smaller.text-block.wine-card__name > a",
      "attribute_name": "href",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://www.vivino.com$URL$i",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 6,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "config": {
        "js": true,
        "timeout": 2
      },
      "description": "Load the url of the wine"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_text",
      "locator": "title",
      "output": {
        "name": "WINERY",
        "type": "string",
        "show": true
      },
      "description": "Saves the winery of the wine"
    },
    {
      "command": "regex",
      "input": "$WINERY",
      "expression": "[^\\|]*",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Applies a regular expression to get just the title"
    },
    {
      "command": "store",
      "input": "$TITLE",
      "output": {
        "name": "WINERY",
        "type": "string",
        "show": true
      },
      "description": ""
    },
    {
      "command": "store_text",
      "locator": "span.vintage",
      "output": {
        "name": "VINTAGE",
        "type": "string",
        "show": true
      },
      "description": "Saves the vintage of the wine"
    },
    {
      "command": "store_text",
      "locator": "div.rating > div > a > div > div:nth-child(1)",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Field: Get the rating"
    },
    {
      "command": "store_text",
      "locator": "span[class*=purchaseAvailability__currentPrice]",
      "output": {
        "name": "PRICE",
        "type": "float",
        "show": true
      },
      "description": "Get the price"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/grapes/']",
      "output": {
        "name": "GRAPES",
        "type": "string",
        "show": true
      },
      "description": "Field: Type of grape"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/wine-styles/']",
      "output": {
        "name": "STYLE",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the style"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/wine-countries/']",
      "output": {
        "name": "COUNTRY",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store_text",
      "locator": "a[href*='/wine-regions/']",
      "output": {
        "name": "PLACE",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store",
      "input": "$COUNTRY $REGION",
      "output": {
        "name": "REGION",
        "type": "string",
        "show": true
      },
      "description": "Field: Saves the region"
    },
    {
      "command": "store_attribute",
      "locator": "picture.bottleShot img",
      "attribute_name": "src",
      "output": {
        "name": "COVER"
      },
      "description": "Saves the image"
    },
    {
      "command": "store",
      "input": "https:$COVER",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Field: Add url param to the cover"
    },
    {
      "command": "store_text",
      "locator": "div[class*=wineLocationHeader__text]",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store",
      "input": "$URL",
      "output": {
        "name": "URL_SALE"
      },
      "description": "Field: Saves the url to sale the product"
    }
  ]
}
