{
  "recipe_shortcut": "apple_podcasts",
  "list_type": "podcasts",
  "engine_version": 17,
  "title": "Apple Podcasts",
  "description": "Load podcasts from Apple",
  "urls": [
    "https://itunes.apple.com/search?media=podcast",
    "itunes.apple.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "https://itunes.apple.com/search?media=podcast&limit=6&explicit=YES&term=$INPUT",
      "config": {
        "method": "GET"
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].artworkUrl100",
      "input": "$JSON",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].artistName",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].trackName",
      "input": "$JSON",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].trackViewUrl",
      "input": "$JSON",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "regex",
      "input": "$INPUT",
      "expression": "([0-9]+)(?=\\?)",
      "output": {
        "name": "ID"
      },
      "description": "Extract the app id from the URL."
    },
    {
      "command": "store",
      "input": "https://itunes.apple.com/search?media=podcast&limit=6&explicit=YES&term=$ID",
      "output":
      {
        "name": "APIURL"
      }
    },
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "$APIURL",
      "config": {
        "method": "GET"
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artistName",
      "input": "$JSON",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].trackName",
      "input": "$JSON",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].trackViewUrl",
      "input": "$JSON",
      "output": {
        "name": "URL",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].collectionName",
      "input": "$JSON",
      "output": {
        "name": "ALBUM",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artworkUrl600",
      "input": "$JSON",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].trackPrice",
      "input": "$JSON",
      "output": {
        "name": "PRICE",
        "type": "float",
        "show": true
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].releaseDate",
      "input": "$JSON",
      "output": {
        "name": "DATE"
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].primaryGenreName",
      "input": "$JSON",
      "output": {
        "name": "GENRE",
        "type": "string",
        "show": true
      }
    },
    {
      "command": "regex",
      "input": "$DATE",
      "expression": "\\d\\d\\d\\d",
      "output": {
        "name": "DATE",
        "type": "date",
        "format": "YYYY",
        "show": true
      },
      "description": "Applies a regular expression to get just the year of the date"
    }
  ]
}
