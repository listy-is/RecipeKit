{
  "recipe_shortcut": "apple_albums",
  "list_type": "albums",
  "engine_version": 16,
  "title": "Apple Albums",
  "description": "Load albums from Apple",
  "urls": [
    "https://itunes.apple.com/search?media=music&entity=album",
    "itunes.apple.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "https://itunes.apple.com/search?media=music&limit=6&entity=album&explicit=YES&term=$INPUT",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of apple"
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].artworkUrl100",
      "input": "$JSON",
      "output": {
        "name": "COVER$i"
      },
      "description": "Saves the cover.",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].artistName",
      "input": "$JSON",
      "output": {
        "name": "SUBTITLE$i"
      },
      "description": "Saves the artist.",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].collectionName",
      "input": "$JSON",
      "output": {
        "name": "TITLE$i"
      },
      "description": "Saves the title.",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "json_store_text",
      "locator": "results.[$i].collectionViewUrl",
      "input": "$JSON",
      "output": {
        "name": "URL$i"
      },
      "description": "Saves the url.",
      "config": {
        "loop": {
          "index": "i",
          "from": 0,
          "to": 5,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "regex",
      "input": "$INPUT",
      "expression": "([0-9]+)(?=\\?)",
      "output": {
        "name": "ID"
      },
      "description": "Extract the app id from the URL."
    },
    {
      "command": "store",
      "input": "https://itunes.apple.com/search?media=music&entity=album&limit=1&explicit=YES&term=$ID",
      "output":
      {
        "name": "APIURL"
      }
    },
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "$APIURL",
      "config": {
        "method": "GET"
      },
      "description": "Retrieves a JSON with output of apple"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artistName",
      "input": "$JSON",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      },
      "description": "Saves the first artist."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].collectionName",
      "input": "$JSON",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Saves the first song."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].collectionViewUrl",
      "input": "$JSON",
      "output": {
        "name": "URL",
        "type": "string",
        "show": true
      },
      "description": "Saves the url."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artworkUrl100",
      "input": "$JSON",
      "output": {
        "name": "COVER"
      },
      "description": "Saves the cover"
    },
    {
      "command": "regex",
      "input": "$COVER",
      "expression": "[\\S]*\\/",
      "output": {
        "name": "COVER"
      },
      "description": "Applies a regular expression to get part of the cover"
    },
    {
      "command": "store",
      "input": "$COVER300x300bb.jpg",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Add high res param to the cover"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].collectionPrice",
      "input": "$JSON",
      "output": {
        "name": "PRICE",
        "type": "float",
        "show": true
      },
      "description": "Saves the price"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].releaseDate",
      "input": "$JSON",
      "output": {
        "name": "DATE"
      },
      "description": "Saves the price"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].primaryGenreName",
      "input": "$JSON",
      "output": {
        "name": "GENRE",
        "type": "string",
        "show": true
      },
      "description": "Saves the genre"
    },
    {
      "command": "regex",
      "input": "$DATE",
      "expression": "\\d\\d\\d\\d",
      "output": {
        "name": "DATE",
        "type": "date",
        "format": "YYYY",
        "show": true
      },
      "description": "Applies a regular expression to get just the year of the date"
    }
  ]
}
