{
  "recipe_shortcut": "imdb_videogames",
  "list_type": "videogames",
  "engine_version": 16,
  "title": "IMDB Videogames",
  "description": "A recipe to get a list of videogames",
  "urls": [
    "https://m.imdb.com/title/"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://www.imdb.com/search/title/?title=$INPUT&title_type=video_game",
      "config": {
        "js": true,
        "timeout": 5
      },
      "description": "Searches videogames by title"
    },
    {
      "command": "store_attribute",
      "locator": "ul.ipc-metadata-list > li:nth-child($i) img",
      "attribute_name": "src",
      "output": {
        "name": "COVER$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "store_text",
      "locator": "ul.ipc-metadata-list > li:nth-child($i) h3",
      "output": {
        "name": "TITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "store_text",
      "locator": "ul.ipc-metadata-list > li:nth-child($i) div.dli-title-metadata",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "regex",
      "input": "$SUBTITLE$i",
      "expression": "(\\d\\d\\d\\d)",
      "output": {
        "name": "SUBTITLE$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "store_attribute",
      "locator": "ul.ipc-metadata-list > li:nth-child($i) a.ipc-title-link-wrapper",
      "attribute_name": "href",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 5,
          "step": 1
        }
      }
    },
    {
      "command": "store",
      "input": "https://m.imdb.com$URL$i",
      "output": {
        "name": "URL$i"
      },
      "config": {
        "loop": {
          "index": "i",
          "from": 1,
          "to": 5,
          "step": 1
        }
      }
    }
  ],
  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "description": "Load the url of the movie"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:title']",
      "attribute_name": "content",
      "output": {
        "name": "TITLE"
      },
      "description": "Takes the title of the movie including the year"
    },
    {
      "command": "regex",
      "input": "$TITLE",
      "expression": "\\d\\d\\d\\d(?=\\))",
      "output": {
        "name": "DATE",
        "type": "date",
        "format": "YYYY",
        "show": true
      },
      "description": "Applies a regular expression to get just the year of the date"
    },
    {
      "command": "regex",
      "input": "$TITLE",
      "expression": "[^\\(]*",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Applies a regular expression to get just the title of the movie before the year"
    },
    {
      "command": "store_attribute",
      "locator": "meta[name='description']",
      "attribute_name": "content",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves temporary the actors, director and description"
    },
    {
      "command": "store_text",
      "locator": "div[data-testid*=hero-rating-bar__aggregate-rating__score]",
      "output": {
        "name": "RATING",
        "type": "string"
      },
      "description": "Saves the rating of the movie"
    },
    {
      "command": "regex",
      "input": "$RATING",
      "expression": "([0-9,\\.]+)",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Applies a regular expression to get part of the rating"
    },
    {
      "command": "store_attribute",
      "locator": "meta[property='og:image']",
      "attribute_name": "content",
      "output": {
        "name": "COVER"
      },
      "description": "Saves the image"
    },
    {
      "command": "regex",
      "input": "$COVER",
      "expression": ".+?images.+?[\\.]",
      "output": {
        "name": "COVER"
      },
      "description": "Applies a regular expression to get part of the cover"
    },
    {
      "command": "store",
      "input": "$COVER._V1_.jpg",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Add high res param to the cover"
    },
    {
      "command": "regex",
      "input": "$URL",
      "expression": "(?<=m.).*",
      "output": {
        "name": "KEYWORDS"
      },
      "description": "Applies a regular expression to get part of the cover"
    },
    {
      "command": "regex",
      "input": "$KEYWORDS",
      "expression": ".*\\/",
      "output": {
        "name": "KEYWORDS"
      },
      "description": "Applies a regular expression to get part of the cover"
    },
    {
      "command": "store",
      "input": "https://www.$KEYWORDSkeywords",
      "output": {
        "name": "KEYWORDS"
      },
      "description": "Get the platforms url"
    },
    {
      "command": "load",
      "url": "$KEYWORDS",
      "description": "Load the url of the keywords"
    },
    {
      "command": "store_array",
