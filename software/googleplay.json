{
  "recipe_shortcut": "software_googleplay",
  "list_type": "software",
  "engine_version": 14,
  "title": "Google Play Apps",
  "description": "A recipe to get a list of apps",
  "urls": [
    "https://play.google.com/store"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Linux; Android 10; Pixel 4) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.129 Mobile Safari/537.36"
  },
  "autocomplete_steps": [
    {
      "command": "load",
      "url": "https://play.google.com/store/search?q=$INPUT&c=apps",
      "description": "Searches apps by title"
    },
    {
      "command": "store_attribute",
      "locator": "[data-p*=$INPUT] [role=listitem]:nth-child(1) a div:nth-child(2) img",
      "attribute_name": "src",
      "output": {
        "name": "COVER1"
      }
    },
    {
      "command": "store_text",
      "locator": "[data-p*=$INPUT] [role=listitem]:nth-child(1) a div:nth-child(2) > div:nth-child(1) > span",
      "output": {
        "name": "TITLE1"
      }
    },
    {
      "command": "store_attribute",
      "locator": "[data-p*=listy] [role=listitem]:nth-child(1) a[href*='/store/apps']",
      "attribute_name": "href",
      "output": {
        "name": "URL1"
      }
    },
    {
      "command": "store",
      "input": "https://play.google.com$URL1",
      "output": {
        "name": "URL1"
      }
