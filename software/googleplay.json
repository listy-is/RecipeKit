  "url_steps": [
    {
      "command": "load",
      "url": "$INPUT",
      "headers": {
        "User-Agent": "Mozilla/5.0 (Linux; Android 6.0; Nexus 5 Build/MRA58N) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Mobile Safari/537.36"
      },
      "description": "Load the url of the app"
    },
    {
      "command": "store_url",
      "output": {
        "name": "URL"
      },
      "description": "Saves the URL of the detail"
    },
    {
      "command": "store_text",
      "locator": "h1[itemprop=name] span",
      "output": {
        "name": "TITLE"
      },
      "description": "Stores the name of the app"
    },
    {
      "command": "store_text",
      "locator": "[data-g-id=description",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    },
    {
      "command": "store_text",
      "locator": "[itemprop=starRating] [aria-label]",
      "output": {
        "name": "RATING"
      },
      "description": "Saves the rating of the app"
    },
    {
      "command": "store_attribute",
      "locator": "[itemprop=image]",
      "attribute_name": "src",
      "output": {
        "name": "COVER"
      },
      "description": "Saves the image"
    }
