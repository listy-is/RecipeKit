{
  "recipe_id": 30,
  "version": 1,
  "engine_version": 14,
  "title": "Apple AppStore",
  "description": "Load content of a link introduced in the app directly from the AppStore",
  "urls": [
    "https://apps.apple.com"
  ],
  "headers": {
    "Accept-Language": "en-UK,en",
    "User-Agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_2) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/81.0.4044.113 Safari/537.36"
  },
  "autocomplete_steps": null,
  "url_steps": [
    {
      "command": "regex",
      "input": "$INPUT",
      "expression": "(id([0-9a-zA-Z]+))",
      "output": {
        "name": "APPID"
      },
      "description": "Extract the app id from the URL."
    },
    {
      "command": "store",
      "input": "https://itunes.apple.com/search?media=software&limit=1&explicit=YES&term=$APPID",
      "output": {
        "name": "APIURL"
      },
      "description": "Concatenates the id on the iTunes search url. And launch all the url_steps on apple.json."
    },
    {
      "command": "api_request",
      "output": {
        "name": "JSON"
      },
      "url": "$APIURL",
      "config": {
        "method": "GET"
      },
      "description": "Retreives a JSON with output of apple"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artistName",
      "input": "$JSON",
      "output": {
        "name": "AUTHOR",
        "type": "string",
        "show": true
      },
      "description": "Saves the first artist."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].trackName",
      "input": "$JSON",
      "output": {
        "name": "TITLE",
        "type": "string",
        "show": true
      },
      "description": "Saves the first song."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].trackViewUrl",
      "input": "$JSON",
      "output": {
        "name": "URL"
      },
      "description": "Saves the url."
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].artworkUrl512",
      "input": "$JSON",
      "output": {
        "name": "COVER",
        "type": "string",
        "show": true
      },
      "description": "Saves the cover"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].formattedPrice",
      "input": "$JSON",
      "output": {
        "name": "PRICE",
        "type": "float",
        "show": true
      },
      "description": "Saves the price"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].releaseDate",
      "input": "$JSON",
      "output": {
        "name": "DATE"
      },
      "description": "Saves the price"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].primaryGenreName",
      "input": "$JSON",
      "output": {
        "name": "GENRE",
        "type": "string",
        "show": true
      },
      "description": "Saves the genre"
    },
    {
      "command": "regex",
      "input": "$DATE",
      "expression": "\\d\\d\\d\\d",
      "output": {
        "name": "DATE",
        "type": "date",
        "format": "YYYY",
        "show": true
      },
      "description": "Applies a regular expression to get just the year of the date"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].averageUserRating",
      "input": "$JSON",
      "output": {
        "name": "RATING",
        "type": "float",
        "show": true
      },
      "description": "Saves the genre"
    },
    {
      "command": "json_store_text",
      "locator": "results.[0].description",
      "input": "$JSON",
      "output": {
        "name": "DESCRIPTION",
        "type": "string",
        "show": true
      },
      "description": "Saves the description"
    }
  ]
}
